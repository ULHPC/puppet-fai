# Main repository
# using the local Debian mirror mounted from <%= scope.lookupvar('fai::debmirror') %>
deb      file:<%= scope.lookupvar('fai::debmirror_mountdir') %>/debian	<%= scope.lookupvar('fai::debootstrap_suite') %>   main contrib non-free
# Online
#deb     http://ftp.fr.debian.org/debian/     <%= scope.lookupvar('fai::debootstrap_suite') %> main contrib non-free
#deb-src http://ftp.fr.debian.org/debian/     <%= scope.lookupvar('fai::debootstrap_suite') %> main contrib non-free

<% if scope.lookupvar('fai::debootstrap_suite') == 'squeeze' -%>
# Long Term Support repository
# Local
deb      file:<%= scope.lookupvar('fai::debmirror_mountdir') %>/debian	<%= scope.lookupvar('fai::debootstrap_suite') %>-lts main contrib non-free
# Online
#deb     http://ftp.fr.debian.org/debian/     <%= scope.lookupvar('fai::debootstrap_suite') %>-lts main contrib non-free
#deb-src http://ftp.fr.debian.org/debian/     <%= scope.lookupvar('fai::debootstrap_suite') %>-lts main contrib non-free
<% end -%>


<% if scope.lookupvar('fai::debootstrap_suite') == 'squeeze' -%>
# Squeeze-updates, previously known as 'volatile'
# Local
deb       file:<%= scope.lookupvar('fai::debmirror_mountdir') %>/debian	squeeze-updates main contrib non-free
# Online
# deb     http://ftp.fr.debian.org/debian/ squeeze-updates main contrib non-free
# deb-src http://ftp.fr.debian.org/debian/ squeeze-updates main contrib non-free
<% end -%>

# Security updates
# Local
deb       file:<%= scope.lookupvar('fai::debmirror_mountdir') %>/debian-security <%= scope.lookupvar('fai::debootstrap_suite') %>/updates main contrib non-free
# Online
# deb     http://security.debian.org/ <%= scope.lookupvar('fai::debootstrap_suite') %>/updates  main contrib non-free
# deb-src http://security.debian.org/ <%= scope.lookupvar('fai::debootstrap_suite') %>/updates  main contrib non-free

<% if scope.lookupvar('fai::use_backports') == true -%>
# Local Backports
deb       file:<%= scope.lookupvar('fai::debmirror_mountdir') %>/debian-backports  <%= scope.lookupvar('fai::debootstrap_suite') %>-backports   main contrib non-free
# Online version
#deb      http://backports.debian.org/debian-backports <%= scope.lookupvar('fai::debootstrap_suite') %>-backports main non-free contrib
<% end -%>

# repository that may contain newer fai packages for <%= scope.lookupvar('fai::debootstrap_suite') %>
deb       http://fai-project.org/download <%= scope.lookupvar('fai::debootstrap_suite') %> koeln

